<!DOCTYPE html>
<html>
  <head>
    <title>bookers</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'books', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="edit">
      <h1>Editing Book</h1>
      <% if @book.errors.any? %>
        <%= @book.errors.count %> error prohibited this book from being saved:
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @book do |f| %>
        <div class="edit-item">
          <h4>Title</h4>
          <%= f.text_field :title %>
        </div>
        <div class="edit-item">
          <h4>Body</h4>
          <p><%= f.text_area :body %></p>
        </div>
        <div class="edit-item">
          <p><%= f.submit 'Update Book' %></p>
        </div>
        <p><%= link_to 'Show', book_path(@book.id) %> | <%= link_to 'Back', '/books' %></p>
      <% end %>
    </div>
  </body>
</html>